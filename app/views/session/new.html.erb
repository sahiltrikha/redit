<% unless @message.nil? %>
  <div id="errors">
    <h3>Errors</h3>
    <ul>
      <li><em><%= @message %></em></li>
    </ul>
  </div>
<% end %>


<%= form_tag "/session" do %>
  <%= label_tag "Username:" %>
  <%= text_field_tag :username %>
  <%= label_tag "Password:" %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log In"%>

<% end %>